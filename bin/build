#!/bin/sh

set -e

if [ "$1" = '' ]; then
  >&2 printf 'usage: %s SOURCE_DIRECTORY\n' "$0"
  exit 1
fi

src=${1%/}
out="$src/build-bin"

if [ "$1" = 'clean' ]; then
  rm -rf "$out"
  exit
fi

if ! [ -d "$src" ]; then
  >&2 printf "Directory \"%s\" doesn't exist.\n" "$src"
  exit 2
fi

mkdir -p "$out"

cd "$out"
cmake ..
make -j "$(nproc)" # VERBOSE=1
printf '\nBuild exited with status %s\n' "$?"
